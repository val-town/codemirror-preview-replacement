{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "files": {
    "include": ["src"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noAssignInExpressions": "off"
      },
      "style": {
        "useTemplate": "info"
      },
      "recommended": true
    }
  }
}
